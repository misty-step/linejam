# Convex
# Get from Convex dashboard
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Convex Deploy Key (for CI/CD - DO NOT commit actual keys)
# Generate from Convex Dashboard → Project Settings → Generate Production/Preview Deploy Key
CONVEX_DEPLOY_KEY=

# Clerk Authentication
# Get from Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Guest token signing/verification
# CRITICAL: This secret MUST be identical in:
#   1. Vercel env vars (for Next.js signing)
#   2. Convex env vars (for backend verification)
#   3. GitHub Actions secrets (for E2E tests)
# Generate with: openssl rand -base64 32
GUEST_TOKEN_SECRET=

# OpenRouter API (for AI players - Convex only)
# Get from https://openrouter.ai/keys
# Note: Set this in Convex environment vars, not Vercel
OPENROUTER_API_KEY=

# Sentry Error Tracking
# Get these from your Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# PostHog Product Analytics
# Get from PostHog project settings
NEXT_PUBLIC_POSTHOG_KEY=
# Uses /ingest reverse proxy by default (see next.config.ts rewrites)
# Override with NEXT_PUBLIC_POSTHOG_HOST if needed
NEXT_PUBLIC_POSTHOG_HOST=

# Automatically set by Vercel
# SENTRY_RELEASE is automatically set from VERCEL_GIT_COMMIT_SHA
